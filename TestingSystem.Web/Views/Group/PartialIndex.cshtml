@model IEnumerable<TestingSystem.BusinessModel.Model.GroupDTO>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecializationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EducationUnitName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecializationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EducationUnitName)
                </td>
                <td>
                    @Html.ActionLink("Students", "Students", new { id = item.Id }) |
                    @Html.ActionLink("Teachers", "Teachers", new { id = item.Id }) |
                    @Html.ActionLink("Tests", "Tests", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-delete", data_id = item.Id })
                </td>
            </tr>
        }

    </table>
}
else
{
    <div class="alert-info">
        No groups
    </div>
}
