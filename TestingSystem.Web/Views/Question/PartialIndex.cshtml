@model IEnumerable<TestingSystem.Web.Models.ViewModels.CreateQuestionViewModel>

<p>
    @Html.ActionLink("Create New", "Create", new { id = ViewBag.SpecializationId })
</p>
@if (Model.Count() != 0)
{
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-3 col-3">
                Question Id
            </div>
            <div class="col-md-3 col-sm-3 col-3">
                Subject Name
            </div>
            <div class="col-md-3 col-sm-3 col-3">
                Specialization Name
            </div>
            <div class="col-md-3 col-sm-3 col-3">
                Action
            </div>
        </div>
    </div>
    foreach (var item in Model)
    {
        <div class="row">
            <div class="col-md-3 col-sm-3 col-3">
                @item.Question.Id
            </div>
            <div class="col-md-3 col-sm-3 col-3">
                @item.Question.SubjectName
            </div>
            <div class="col-md-3 col-sm-3 col-3">
                @item.Question.SpecializationName
            </div>
            <div class="col-md-3 col-sm-3 col-3">
                @Html.ActionLink("Edit", "Edit", new { id = item.Question.Id })
                @if (item.Question.EducationUnitId == ViewBag.EducationUnitId)
                {
                    <div>
                        @Html.ActionLink("Delete", "Delete", new { id = item.Question.Id }, new { @class = "btn-delete", data_id = item.Question.Id })
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-12">
                @item.Question.QuestionString
            </div>
        </div>
        for (int i = 1; i <= item.Answers.Count(); i++)
        {
            <div class="row">
                <div class="col-md-10 col-sm-10 col-10">
                    @i. @item.Answers.ElementAt(i - 1).AnswerString
                </div>
                <div class="col-md-2 col-sm-2 col-2">
                    @item.Answers.ElementAt(i - 1).IsCorrect
                </div>
            </div>

        }
        <hr />
    }
}
else
{
    <div class="alert-info">
        No questions
    </div>
}