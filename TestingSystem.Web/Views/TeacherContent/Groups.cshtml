@model IEnumerable<TestingSystem.BOL.Model.GroupDTO>
@{ ViewBag.Title = "Groups"; Layout = "~/Views/Shared/_TeacherLayout.cshtml"; }
<br /><br /><br />
@if (Model.Count() != 0)
{
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(model => model.GroupName)</th>
            <th scope="col">@Html.DisplayNameFor(model => model.SpecializationName)</th>
            <th scope="col">Students List</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GroupName)</td>
                <td>@Html.DisplayFor(modelItem => item.SpecializationName)</td>
                <td>@Html.ActionLink("Students", "Students", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="alert alert-info">
        No groups
    </div>
}