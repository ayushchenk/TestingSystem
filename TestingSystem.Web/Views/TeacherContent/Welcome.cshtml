@{
    ViewBag.Title = "Welcome";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="L A P I D U S">
    <meta name="author" content="EDUCATION SYSTEM">
    <link href="@Url.Content("~/Design/WelcomePageTeachers/vendor/fontawesome-free/css/all.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("https://fonts.googleapis.com/css?family=Merriweather+Sans:400,700")" rel="stylesheet">
    <link href='@Url.Content("https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic")' rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/Design/WelcomePageTeachers/vendor/magnific-popup/magnific-popup.css")" rel="stylesheet">
    <link href="@Url.Content("~/Design/WelcomePageTeachers/css/creative.min.css")" rel="stylesheet">
</head>
<body id="page-top">
    <header class="masthead">
        <div class="container h-100">
            <div class="row h-100 align-items-center justify-content-center text-center">
                <div class="col-lg-10 align-self-end">
                    <h1 class="text-uppercase text-white font-weight-bold">Welcome to the Education Control System</h1>
                    <hr class="divider my-4">
                </div>
                <div class="col-lg-8 align-self-baseline">
                    <a class="btn btn-primary btn-xl js-scroll-trigger" href="@Url.Action("Groups","TeacherContent")">Go to Panel</a>
                </div>
            </div>
        </div>
    </header>
    <!-- About Section -->
    <section class="page-section bg-primary" id="about">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 text-center">
                    <h2 class="text-white mt-0">Thanks for your work</h2>
                    <hr class="divider light my-4">
                    <p class="text-white-50 mb-4">Teachers of educational institutions are provided with an interface on which everything necessary for managing groups and students will be provided.</p>
                    <a class="btn btn-light btn-xl js-scroll-trigger" href="@Url.Action("Groups", "TeacherContent")">Get Started</a>
                </div>
            </div>
        </div>
    </section>
    <script src="@Url.Content("~/Design/WelcomePageTeachers/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/Design/WelcomePageTeachers/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/Design/WelcomePageTeachers/vendor/jquery-easing/jquery.easing.min.js")"></script>
    <script src="@Url.Content("~/Design/WelcomePageTeachers/vendor/magnific-popup/jquery.magnific-popup.min.js")"></script>
    <script src="@Url.Content("~/Design/WelcomePageTeachers/js/creative.min.js")"></script>
</body>
</html>