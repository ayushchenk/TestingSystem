@model TestingSystem.Web.Models.Identity.LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Login";
}
<body>
    <section id="loginForm">
        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100 p-l-50 p-r-50 p-t-77 p-b-30">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <span class="login100-form-title p-b-55">
                            Login
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </span>

                        <div class="wrap-input100 validate-input m-b-16" data-validate="Valid email is required: user@abc.xyz">
                            @Html.TextBoxFor(m => m.Email, new { @class = "input100", @type = "email", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-envelope"></span>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-16" data-validate="Password is required">
                            @Html.PasswordFor(m => m.Password, new { @class = "input100", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <span class="lnr lnr-lock"></span>
                            </span>
                        </div>

                        <div class="container-login100-form-btn p-t-25">
                            <button class="login100-form-btn" type="submit">
                                Login
                            </button>
                        </div>
                    }
                    <div class="text-center w-full p-t-42 p-b-22">
                        <span class="txt1">
                            Or login with
                        </span>
                    </div>

                    @*<a href="#" class="btn-face m-b-10">
                        <i class="fa fa-facebook-official"></i>
                        Facebook
                    </a>

                    <a href="#" class="btn-google m-b-10">
                        <img src="~/Design/loginForm/images/icons/icon-google.png" alt="GOOGLE">
                        Google
                    </a>*@

                    <section id="socialLoginForm">
                        @Html.Partial("_ExternalLoginsListPartial", new TestingSystem.Web.Models.Identity.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                    </section>

                    <div class="text-center w-full p-t-115">
                        <span class="txt1">
                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                        </span>
                    </div>

                </div>
            </div>
        </div>
    </section>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="icon" type="image/png" href="~/Design/loginForm/images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Design/loginForm/css/main.css">
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Design/loginForm/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Design/loginForm/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Design/loginForm/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Design/loginForm/vendor/select2/select2.min.js"></script>
    <script src="~/Design/loginForm/js/main.js"></script>
}