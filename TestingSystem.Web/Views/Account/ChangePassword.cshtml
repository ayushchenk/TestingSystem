@model TestingSystem.Web.Models.Identity.ChangePasswordViewModel
@{ ViewBag.Title = "Change Password"; Layout = null; }
<head>
<link href="@Url.Content("~/Design/ProfilePage/css/profile.css")" rel="stylesheet" />
</head>
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label for="exampleInputEmail1">Current Password</label>
        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">New Password</label>
        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">Confirm Password</label>
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">SAVE</button>
}
<script src="@Url.Content("~/Design/adminForm/vendor/jquery-3.2.1.min.js")"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}