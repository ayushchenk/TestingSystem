@model IEnumerable<TestingSystem.BOL.Model.GroupsInTestDTO>

@{
    ViewBag.Title = "Tests";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<h2>Tests</h2>

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TestName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @if (item.StartDate.Value.AddTicks(item.StartTime.Value.Ticks) > DateTime.Now.AddMinutes(item.Length))
                    {
                        <span>
                            @Html.ActionLink("Participate", "Participate", new { id = item.Id }, new { disabled = "disabled" })
                        </span>
                    }
                    else
                    {
                        <span>
                            @Html.ActionLink("Participate", "Participate", new { id = item.Id })
                        </span>
                    }
                    </td >
                </tr >
        }

</table>
}
else
{
    <div class="alert alert-info">
        No tests
    </div>
}

@section Scripts{
    <script type="text/javascript">
        $("a").on("click", function (event) {
            if ($(this).is("[disabled]")) {
                event.preventDefault();
            }
        });
    </script>
}