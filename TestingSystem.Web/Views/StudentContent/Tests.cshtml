@model IEnumerable<TestingSystem.BOL.Model.GroupsInTestDTO>
@{ ViewBag.Title = "Tests"; Layout = "~/Views/Shared/_StudentLayout.cshtml"; }
@if (Model.Count() != 0)
{
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-plain table-plain-bg">
                        <div class="card-header">
                            <h4 class="card-title">Tests</h4>
                        </div>
                        <div class="card-body table-full-width table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(model => model.TestName)</th>
                                        <th>@Html.DisplayNameFor(model => model.StartTime)</th>
                                        <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                        <th>@Html.DisplayNameFor(model => model.Length)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.TestName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                                            <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Length)</td>
                                            <td>@Html.ActionLink("Participate", "Participate", new { id = item.Id }, new { @class = "btn btn-primary" })</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h4 class="card-title">Tests</h4>
    <div class="alert alert-info">
        No tests
    </div>
}
@section Scripts{
    <script type="text/javascript">
        $("a").on("click", function (event) {
            if ($(this).is("[disabled]")) {
                event.preventDefault();
            }
        });
    </script>
}