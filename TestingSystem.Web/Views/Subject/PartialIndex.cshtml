@model IEnumerable<TestingSystem.BusinessModel.Model.SubjectDTO>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecializationName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SubjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecializationName)
                </td>
                <td>
                    @if ((ViewBag.IsGlobal && ViewBag.EducationUnitId == null)
                        || (item.EducationUnitId == ViewBag.EducationUnitId))
                    {
                        <span>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { }) |
                        </span>
                        <span>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-delete", data_id = item.Id })
                        </span>
                    }
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert-info">
        No subjects
    </div>
}
