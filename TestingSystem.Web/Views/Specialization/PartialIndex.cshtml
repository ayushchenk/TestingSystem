@model IEnumerable<TestingSystem.BOL.Model.SpecializationDTO>
<br />
<p> @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })</p>
@if (Model.Count() != 0)
{
    <div class="row">
        <div class="col-md-12">
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th> @Html.DisplayNameFor(model => model.SpecializationName)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SpecializationName)
                                </td>
                                <td>
                                    @Html.ActionLink("Groups", "Groups", new { id = item.Id }, new { }) |
                                    @Html.ActionLink("Subjects", "Subjects", new { id = item.Id }, new { }) |
                                    @if ((ViewBag.IsGlobal && ViewBag.EducationUnitId == null)
                                        || (item.EducationUnitId == ViewBag.EducationUnitId))
                                    {
                                        <span>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { }) |
                                        </span>
                                        <span>
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn-delete", data_id = item.Id })
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert-info">
        No specializations
    </div>
}