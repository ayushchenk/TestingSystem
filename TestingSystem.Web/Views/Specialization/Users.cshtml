@model TestingSystem.Web.Models.ViewModels.SpecUsersViewModel

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Specialization @Model.Specialization.SpecializationName Users</h2>
<hr />
@Html.ActionLink("Create new", "Create", "User", new { groupId = 0, specId = Model.Specialization.Id }, new { })

@if (Model.Users != null && Model.Users.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Login")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("FirstName")
            </th>
            <th>
                @Html.DisplayName("LastName")
            </th>
            <th>
                @Html.DisplayName("Patronymic")
            </th>
            <th>
                @Html.DisplayName("SpecializationName")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecializationName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "User", new { id = item.Id }, new { }) |
                    @Html.ActionLink("Delete", "Delete", "User", new { id = item.Id }, new { @class = "btn-delete", data_id = item.Id })
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="alert-info">
        No users
    </div>
}

<p>
    @Html.ActionLink("Edit specialization", "Edit", new { id = Model.Specialization.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

