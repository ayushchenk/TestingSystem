@{
    ViewBag.Title = "Tests";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<h2>Tests</h2>
<input type="text" id="filter-input" class="form-control" />
<div id="partial-content">
</div>
@section Scripts{
    <script src="@Url.Content("~/Scripts/bootstrap-notify.min.js")"></script>

    <script type="text/javascript">
        $(function () {
            $("#partial-content").load("@Url.Action("PartialIndex", "Test")");

            $("body").on("click", ".btn-delete", function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Delete", "Test")",
                    data: { id: $(this).attr("data-id") },
                    success: function (data) {
                        $("#partial-content").load("@Url.Action("PartialIndex", "Test")");
                        //$("#alert-content").empty();
                        //$("#alert-content").append(data);
                        //setTimeout(function () {
                        //    $("#alert-content").empty();
                        //}, 3500);
                        $.notify({
	                        message: data
                        },{
	                        type: 'success'
                        });
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $.notify({
	                        message: "An error occured while processing your request"
                        },{
	                        type: 'danger'
                        });
                    }
                });
            });

            $("body").on("click", ".btn-set-status", function (e) {
                e.preventDefault();
                $.ajax({
                    type: "POST",
                    url: "@Url.Action("SetStatus", "Test")",
                    data: { id: $(this).attr("data-id"), status: $(this).attr("data-status") },
                    success: function (data) {
                        $("#partial-content").load("@Url.Action("PartialIndex", "Test")");
                        $("#div-info").empty();
                        $("#div-info").append(data);
                    }
                });
            });

            $("body").on("keypress", "#filter-input", function (e) {
                if (e.which == 13)
                    $("#partial-content").load("@Url.Action("PartialIndex", "Test")", { filter : $(this).val()});
            });
        });

    </script>
}